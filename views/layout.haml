!!!
%html
  %head
    %meta{:charset=>"utf-8"}
    %meta{:name => "viewport", :content => "initial-scale=0.6, maximum-scale=2"}

    %title= options.title
    %link{:href => "/stylesheets/btsgroup.css", :rel => "stylesheet"}
  %body
    #content
      #header
        %h1
          %a{:href => "/", :title => "btsgroup"} BTS group
        #nav
          %ul
            %li
              %a#settings_button{:title => 'Einstellungen'} Einstellungen
            %li
              %a{:href => '/logout', :title => 'Abmelden'} Abmelden
        #settings
          %form{:action => '/settings', :method => 'post'}
            %fieldset
              %label{:for => 'email'} E-Mail
              %input#email{:name => 'email', :type => 'email', :value => current_person.email}
              %h2 Passwort ändern. Nur ausfüllen, wenn Passwort geändert werden soll.
              %label{:for => 'password'} Passwort
              %input#password{:name => 'password', :type => 'password'}
              %label{:for => 'password_confirmation'} Wiederholung
              %input#password_confirmation{:name => 'password_confirmation', :type => 'password'}
              %button{:type => "submit"} Speichern
      #main
        =styled_flash
        = yield
      #footer
        %a{ :href => "http://github.com/dabio/btsgroup",
          :title => "source is here"} source

    %script{:src => '//code.jquery.com/jquery-1.4.4.min.js'}
    %script{:src => "//www.google.com/js/gweb/analytics/autotrack.js"}
    %script
      var tracker = new gweb.analytics.AutoTrack({profile: 'UA-67221-5'});
      \/iPhone/i.test(navigator.userAgent) && !pageYOffset && !location.hash && setTimeout(function(){window.scrollTo(0, 1);}, 100);
      $('#settings_button').live('click',function(){$('#settings').animate({opacity:'toggle'},100)});
      setTimeout(function(){$('#flash').fadeTo(false,0).slideUp();},3000);
      $('form').live('submit', function(){$('button').attr('disabled', 'disabled')});



